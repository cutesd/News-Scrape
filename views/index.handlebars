<div class="jumbotron jumbotron-fluid box-shadow">
    <div class="background" style="background-image: url('/img/jumbo-bg{{rndNum}}.jpg');"></div>
    <div class="overlay"></div>
    <div class="caption">
        <h1>Humorscrape</h1>
        <p>Because sometimes you need a break from the serious.</p>
    </div>
</div>

<div class="article-container">

    {{#ifArticles articles}}
    <div class="card-columns">
        {{#each articles}} 
        {{#unless saved}}
        <div class="card box-shadow mt-3 mb-4">
            {{#if img}}
            <a href="{{link}}" target="_blank">
                <img class="card-img-top" src="{{img}}" alt="{{title}}">
            </a>
            {{/if}}
            <div class="card-body p-0">
                <h4 class="card-header text-center no-radius px-4 py-3">
                    <a class="text-white" href="{{link}}" target="_blank">{{title}}</a>
                </h4>
                <p class="card-text p-4">{{body}}</p>
            </div>
            <div class="card-footer">
                <button class="btn btn-success btn-lg btn-block green-text save-btn" data-id="{{_id}}" data-type="save">Save Article</button>
            </div>
        </div>
        {{/unless}} 
        {{/each}}
    </div>
    {{else}}

    <div class="alert bg-green green-text text-center">
        <h4>Looks like we don't have any new articles.</h4>
    </div>
    <div class="card box-shadow">
        <div class="card-header text-center">
            <h3>What Would You Like To Do?</h3>
        </div>
        <div class="card-body text-center">
            <h4>
                <a id="scrape-btn">Try Scraping New Articles</a>
            </h4>
            <h4>
                <a href="/saved">Go to Saved Articles</a>
            </h4>
        </div>
    </div>
    {{/ifArticles}}
</div>