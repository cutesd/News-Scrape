<!-- Modal -->
<div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="noteModalLabel">Notes for Article: <span id="articleTitle"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="far fa-times-circle"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <tbody>
                        {{!-- Notes --}}
                    </tbody>
                </table>
                
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">New Note:</span>
                    </div>
                    <textarea class="form-control" aria-label="New Note" rows="3" id="noteText"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="saveNote-btn">Save Note</button>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron jumbotron-fluid box-shadow">
    <div class="background" style="background-image: url('/img/jumbo-bg{{rndNum}}.jpg');"></div>
    <div class="overlay"></div>
    <div class="caption">
        <h1>Saved Articles</h1>
        <p>Your Saved Articles</p>
    </div>
</div>

<div class="article-container">

    {{#ifArticles articles}}
    <div class="card-deck justify-content-center no-gutters">
        {{#each articles}}
        <div class="col-md-6 col-lg-4">
        <div class="card box-shadow mt-3 mb-4">
            {{#if img}}
            <a href="{{link}}" target="_blank">
                <img class="card-img-top" src="{{img}}" alt="Card image cap">
            </a>
            {{/if}}
            <div class="card-body p-0">
                <h4 class="card-header text-center no-radius px-4 py-3">
                    <a class="text-white" href="{{link}}" target="_blank">{{title}}</a>
                </h4>
                <p class="card-text p-4">{{body}}</p>
            </div>
            <div class="card-footer">
                <button class="btn btn-success btn-lg btn-block green-text addNote-btn" data-id="{{_id}}">Article Notes</button>
                <button class="btn btn-danger btn-lg btn-block save-btn" data-id="{{_id}}" data-type="unsave">Remove from Saved</button>
            </div>
        </div>
        </div>
        {{/each}}
    </div>
    {{else}}


    <div class="alert bg-green green-text text-center">
        <h4>Looks like you haven't saved any articles.</h4>
    </div>
    <div class="card box-shadow">
        <div class="card-header text-center">
            <h3>Would you like to browse available articles?</h3>
        </div>
        <div class="card-body text-center">
            <h4>
                <a href="/">Browse Articles</a>
            </h4>
        </div>
    </div>
    {{/ifArticles}}
</div>